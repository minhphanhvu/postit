<div class='container'>
  <%= form_with model: @user, local: true do |f| %>
    <%= render 'shared/errors', obj: @user %>
    <div class='form-group'>
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control w-100' %>
    </div>
    <div class='form-group mt-2'>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control w-100' %>
    </div>
    <div class='form-group mt-2'>
      <%= f.label :phone, 'Phone number <small>(numbers only)</small>'.html_safe %>
      <%= f.text_field :phone, maxlength: 10, class: 'form-control w-100' %>
      <%= link_to '#', id: 'two_factor_phone' do %>
        <%= "<i class='fa fa-question-circle'></i>".html_safe %>
      <% end %>
    </div>
    <div class='form-group mt-2'>
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name, class: 'form-control w-100' %>
    </div>
    <%= f.submit(@user.new_record? ? "Register" : "Update Profile", class: "btn btn-outline-primary mt-3")%>
  <% end %>
</div>